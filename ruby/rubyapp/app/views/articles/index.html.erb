<h1>Tous vos articles</h1>
<%= link_to 'Nouvel article', new_article_path %>
<table>
  <tr>
    <th>Titre</th>
    <th>Texte</th>
    <th colspan="3"></th>
  </tr>
 
<% @articles.each do |article| %>
  <tr>
    <td><%= article.title %></td>
    <td><%= article.text %></td>
    <td><%= link_to 'Afficher', article_path(article) %></td>
    <td><%= link_to 'Editer', edit_article_path(article) %></td>
    <td><%= link_to 'Supprimer', article_path(article),
                    method: :delete, data: { confirm: 'Etes vous sur ?' } %></td>
  </tr>
<% end %>
</table>